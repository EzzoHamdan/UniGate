@model List<UniversityGate.Models.Professor>

@{
    ViewBag.Title = "Professor Management";
}
<h2>Professor List</h2>

<p>
    @Html.ActionLink("Add New Professor", "Create", null, new { @class = "btn btn-outline-success mt-2 m-lg-2" })
    @Html.ActionLink("Return To Dashboard", "Index", "Administrator", null, new { @class = "btn btn-outline-success mt-2 m-lg-2" })
</p>

@if (Model.Count != 0)
{
    <div class="container mt-3">
        <table class="table table-success table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>
                        Professor Name
                    </th>
                    <th>
                        Professor ID
                    </th>
                    <th>
                        Email
                    </th>


                    <th>
                        Hire Date
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.first_name) @Html.DisplayFor(modelItem => item.last_name)
                        </td>
                        <td>
                            @item.professorID
                        </td>
                        <td>
                            @item.email
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.hire_date)
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                @Html.ActionLink("Edit", "Edit", new { id = item.professor_id }, new { @class = "btn btn-outline-primary" })
                                @Html.ActionLink("Details", "Details", new { id = item.professor_id }, new { @class = "btn btn-outline-success" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.professor_id }, new { @class = "btn btn-outline-danger" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

